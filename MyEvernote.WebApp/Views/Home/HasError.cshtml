
@{
    ViewBag.Title = "Hata Oluştu";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @{ 
            Exception ex = null;
            if(TempData["LastError"]!= null)
            {
                ex = TempData["LastError"] as Exception;
            }


}

        <h1><span class="fa fa-remove"></span> Hata oluştu</h1>
        <p>
            Sistemsel bir hata oluştu, lütfen bizimle iletişime geçiniz.
            <br /><br /><br />
            @if (ex != null)
            {
                <strong>Hata Detay : </strong>
                @ex.Message
                <br /><br /><br />
            }
            @Bootstrap.LinkButton("/Home/Index", "default", "", "", "home", "Ana Sayfaya Git!")
            @Bootstrap.LinkButton("mailto:admin@sedatemre.com", "primary", "", "", "envelope", "E-Posta Gönder")
        </p>

    </div>
</div>