@using MyEvernote.Entities
@model EvernoteUser
@{
    ViewBag.Title = "Kullanıcı Profili";
}


<div class="row pl-5 pt-3">
    <div class="col-md-12">
        <p class="display-4">
            Kullanıcı Hesabı
        </p>
    </div>
</div>

<div class="row p-5">
    <div class="col-md-2">
        <img src="~/img/@Model.ProfileImageFilename" class="rounded-circle img-thumbnail" width="128" height="128" />
    </div>
    <div class="col-md-10">
        <h2 class="mb-4">@Model.Name&nbsp;@Model.Surname</h2>
        <h5><b>@Html.DisplayNameFor(model => model.Username) : </b>@Model.Username<br/>
        <b>@Html.DisplayNameFor(model => model.Name)-@Html.DisplayNameFor(model => model.Surname) : </b>@Model.Name @Model.Surname<br />  
        <b>@Html.DisplayNameFor(model => model.Email) : </b>@Model.Email</h5>
    </div>
</div>

