@using MyEvernote.Entities.ValueObjects
@model LoginViewModel

@{
    ViewBag.Title = "Sedosphere - Giriş Sayfası";
}


<style>
    .vertical-strech {
        height: 93.9vh;
    }

    .validaton-summary-valid {
    }

    .validaton-summary-errors {
    }
</style>
<link href="~/Content/Login-Register.css" rel="stylesheet" />
<link href="~/Content/ValidationSummary.css" rel="stylesheet" />

<div class="row mr-0">
    <div class="col-md-12 p-0">
        <section class="login-block p-4 vertical-strech">

            <div class="row">
                <div class="col-md-4 login-sec">
                    <h2 class="text-center">Hoşgeldiniz</h2>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login-form" }))
                    {

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Username, new
                            {
                           @placeholder = "Kullanıcı Adı",
                                @class = "form-control"
                            })
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.Password, new
                            {
                           @placeholder = "Şifre",
                                @class = "form-control"
                            })
                        </div>
                        <div class="form-check">
                            @*<label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">
                                    <small>Beni Hatırla</small>
                                </label>*@
                            <button type="submit" class="btn btn-login float-right">Giriş Yap</button>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group mt-4">
                            <div class="col-md-12">
                                @Html.ValidationSummary(false)
                            </div>
                        </div>
                    }
                    <div class="copy-text">Created with <i class="fa fa-heart"></i> by <a href="http://grafreez.com">Grafreez.com</a></div>
                </div>
                <div class="col-md-8 banner-sec">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="https://picsum.photos/id/1/1650/1150" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h2>This is Heaven</h2>
